---
//credit https://github.com/MaeWolff/astro-portfolio-template/blob/main/src/components/PostCard.astro
import FormattedDate from '../components/FormattedDate.astro';

type Props = {
  title: string;
  pubDate: Date;
  description: string;
  slug: string;
  summary: string;
};

const { title, pubDate, description, slug, summary } = Astro.props;
---

<a
  class="group flex max-w-full cursor-pointer relative flex gap-2 rounded-md p-4 transition-all duration-300 hover:-translate-y-2 border border-primary hover:border-pink"
  href={slug}
>
<svg
        width="18"
        height="18"
        viewBox="0 0 18 18"
        fill="none"
        class="transition-all duration-300 group-hover:translate-x-1 stroke-pink ml-auto"
      >
        <path
          d="M5.25 12.75L12.75 5.25"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <path
          d="M5.25 5.25H12.75V12.75"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>

  <div
    class="flex w-full flex-col justify-between"
  >
  <p class="opacity-50"><FormattedDate date={pubDate} /></p>
  <p class="">{title}</p> 
  </div>

  <p class="truncate">
    {summary}
  </p>
</a>