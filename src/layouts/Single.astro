---
import FormattedDate from '../components/FormattedDate.astro';
import Base from './Base.astro';

const { frontmatter, ...props } = Astro.props;
---
	<Base {...props}>
		<article>
			
			{props.heroImage && <div class="hero-image"> <img width={1020} height={510} src={props.heroImage} alt="" /> </div>}
			
			<div class=" max-w-3xl  mx-auto backdrop-blur -m-10 p-10 rounded-lg ">
				
					<div class="opacity-50">
						{props.pubDate && <FormattedDate date={props.pubDate} />}
						{
							props.updatedDate && (
								<div class="italic">
									Last updated on <FormattedDate date={props.updatedDate} />
								</div>
							)
						}
					</div>
					<h1 class="text-4xl font-bold">{frontmatter?.title || props.title}</h1>
					<div class="h-1 my-3 mb-10 bg-gradient-to-r from-blue via-pink to-yellow rounded"></div>

				
				<div class="prose prose-invert">
					<slot />
				</div>
				
			</div>
		</article>
	</Base>
			
		