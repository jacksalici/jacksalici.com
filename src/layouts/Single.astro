---
import FormattedDate from '../components/FormattedDate.astro';
import Base from './Base.astro';

const { ...props } = Astro.props;
---
	<Base title={props?.title}, description={props?.description}, tags={props?.tags}, image={props?.cover}>
		<main>
			
			<div class="flex flex-row gap justify-between">		
				<div>
					<div class="opacity-50 mb-3">
						{props.pubDate && <FormattedDate date={props.pubDate} />}{
							props.updatedDate && (
								<span class="italic">
									~ Updated on <FormattedDate date={props.updatedDate} />
								</span>
							)
						}{
							props.categories && (
								<span class="">
									~ {props.categories.join(', ')}
								</span>
							)
						}{
							props.langs && (
								<span class="">
									~ Built using {props.langs.join(', ')}
								</span>
							)
						}
					</div>
					<h1 class="text-4xl font-bold" style="text-wrap:balance">{ props.title}</h1>
					<p class="text-lg">{props.summary}</p>
				</div>
				<div class="w-min">
					{props.featured && <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" class="w-6 transition-all group-hover:scale-75 fill-primary"><!--! Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free (Icons: CC BY 4.0, Fonts: SIL OFL 1.1, Code: MIT License) Copyright 2023 Fonticons, Inc. --><path d="M192 32c17.7 0 32 14.3 32 32V199.5l111.5-66.9c15.2-9.1 34.8-4.2 43.9 11s4.2 34.8-11 43.9L254.2 256l114.3 68.6c15.2 9.1 20.1 28.7 11 43.9s-28.7 20.1-43.9 11L224 312.5V448c0 17.7-14.3 32-32 32s-32-14.3-32-32V312.5L48.5 379.4c-15.2 9.1-34.8 4.2-43.9-11s-4.2-34.8 11-43.9L129.8 256 15.5 187.4c-15.2-9.1-20.1-28.7-11-43.9s28.7-20.1 43.9-11L160 199.5V64c0-17.7 14.3-32 32-32z"/></svg>}
					{props.trending && <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" class="w-7 transition-all group-hover:-translate-x-1 fill-primary"><!--! Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free (Icons: CC BY 4.0, Fonts: SIL OFL 1.1, Code: MIT License) Copyright 2023 Fonticons, Inc. --><path d="M384 160c-17.7 0-32-14.3-32-32s14.3-32 32-32H544c17.7 0 32 14.3 32 32V288c0 17.7-14.3 32-32 32s-32-14.3-32-32V205.3L342.6 374.6c-12.5 12.5-32.8 12.5-45.3 0L192 269.3 54.6 406.6c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3l160-160c12.5-12.5 32.8-12.5 45.3 0L320 306.7 466.7 160H384z"/></svg>}
				</div>
			</div>
			<div class="h-2 my-7 mb-10 bg-gradient-to-r from-blue via-pink to-yellow rounded"></div>


			<div class="prose prose-invert prose-p:text-justify prose-p:hyphens-auto mx-auto">
				<slot />
			</div>
				
			
		</main>
	</Base>
			
		