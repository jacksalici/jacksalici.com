---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { title, description, tags } = Astro.props;
const today = new Date();

---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} keywords={tags}/>
  </head>

  <body class="m-0 p-2 text-primary bg-background flex flex-col gap-12 lg:gap-28 min-h-screen">
    
    <Header />

    <slot />

    <footer class="mt-auto">
      <p class="text-center mb-5 text-sm opacityOnHover">
        &copy; 2017 - {today.getFullYear()} Jack Salici. <nobr>Made with ‚ù§Ô∏è and üçï on üåç.</nobr><br/><br/>
