@import "https://fonts.googleapis.com/css2?family=Fira+Mono:wght@400;700&family=Indie+Flower&family=Merriweather:ital@0;1&family=Montserrat:ital,wght@0,100;0,400;0,800;1,100;1,400;1,800&display=swap";html{font-size:95%;background-color:#eee}*{transition:all .5s ease-out}h1,h2,h3,h4{font-family:montserrat,sans-serif;margin-bottom:0 pt}a{text-decoration-style:wavy;color:#000}::after{color:initial}a:hover{color:#0188e2}body{max-width:500px;margin-top:0;font-family:merriweather,serif;padding:5px}@media(min-width:768px){body{margin-left:50px}}.content{font-size:105%;margin-bottom:100px}article .post-text{text-align:justify;hyphens:auto}article h1{margin-bottom:0}article .meta{font-size:80%;font-style:italic}blockquote{font-family:indie flower,cursive;font-size:115%;background-color:#dadada;padding:10px;width:fit-content}table{border:1px solid #000;border-radius:10px}code{font-family:fira mono,monospace}footer{margin-top:200px;font-size:60%}#posts li{list-style-type:none}#posts .post{margin-left:0;border-radius:10px;padding:20px;width:fit-content}#posts .post .name{font-weight:400;font-family:montserrat,sans-serif}#posts .post .section,#posts .post .date{font-style:italic;font-size:70%}#posts .post a{text-decoration:none}#posts .post:hover{background-color:#dadada;color:initial}.big-title{padding-top:100px;font-size:2.5em}img{width:100%;border-radius:10px}header{margin-top:0;margin-bottom:120px}header ul{padding-left:0;list-style-type:none;display:flex}header ul .nav-bar{display:flex;width:100%;float:right;margin:0;padding:0;overflow:hidden;justify-content:flex-end}header ul .nav-bar .site-name{margin-top:0;text-transform:uppercase;display:block}header ul .nav-bar .site-name a{text-decoration:none}header ul .nav-bar .site-name .hover{color:initial}header ul .nav-bar .menu-item{align-content:left;float:right;min-width:50px;padding:10px;text-align:center;display:block;align-self:center;border-radius:10px;font-family:montserrat,sans-serif}header ul .nav-bar .menu-item a{text-decoration:none}header ul .nav-bar .menu-item:hover{background-color:#dadada}header ul .logo{width:12%;min-width:50px;max-width:100px;border-radius:0;margin-left:0;padding-left:0}header ul .logo img{border-radius:0}